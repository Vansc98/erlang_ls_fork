{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "编译",
            "type": "shell",
            "command": "rebar3 compile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "owner": "erlang25erlc",
                    "fileLocation": "relative",
                    "applyTo": "openDocuments",
                    "pattern": {
                        "regexp": "(.*):(\\d+):(\\d+):\\s*(Warning:)?\\s*(.*)",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            ]
        },
        {
            "label": "生成 bin",
            "type": "shell",
            "command": "rebar3 escriptize",
            "group": {
                "build": true
            }
        },
        {
            "label": "打开目标项目",
            "type": "shell",
            "dependsOn": [
                "生成 bin"
            ],
            "command": "code D:\\linux_data\\qt01\\",
            // "command": "code D:\\Work\\company\\yymj\\dev_yymj_gh",
            "group": {
                "build": true
            }
        },
        {
            "label": "shell",
            "type": "shell",
            "command": "rebar3 shell",
            "group": {
                "build": true
            }
        }
    ]
}